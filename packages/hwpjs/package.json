{
  "name": "@ohah/hwpjs",
  "version": "0.1.0-rc.1",
  "description": "HWP parser for Node.js, Web, and React Native",
  "main": "./dist/browser.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "react-native": {
        "types": "./dist/react-native/index.d.mts",
        "default": "./dist/react-native/index.mjs"
      },
      "default": "./dist/browser.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ohah/hwpjs.git"
  },
  "license": "MIT",
  "author": "ohah <bookyoon173@gmail.com>",
  "homepage": "https://ohah.github.io/hwpjs",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api",
    "react-native",
    "ios",
    "android",
    "hwp"
  ],
  "files": [
    "index.d.ts",
    "index.js",
    "browser.js",
    "src",
    "dist",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "napi": {
    "binaryName": "hwpjs",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "i686-pc-windows-msvc",
      "aarch64-apple-darwin",
      "aarch64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "wasm32-wasip1-threads"
    ]
  },
  "engines": {
    "node": ">= 12.22.0 < 13 || >= 14.17.0 < 15 || >= 15.12.0 < 16 || >= 16.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "napi": "napi new",
    "artifacts": "napi artifacts --output-dir dist --build-output-dir dist",
    "bench": "node --import @oxc-node/core/register benchmark/bench.ts",
    "build:node:windows-x64": "napi build --platform --target x86_64-pc-windows-msvc --release --package hwpjs --output-dir dist --cross-compile",
    "build:node:windows-x86": "napi build --platform --target i686-pc-windows-msvc --release --package hwpjs --output-dir dist --cross-compile",
    "build:node:windows-arm64": "napi build --platform --target aarch64-pc-windows-msvc --release --package hwpjs --output-dir dist --cross-compile",
    "build:node:macos-x64": "napi build --platform --target x86_64-apple-darwin --release --package hwpjs --output-dir dist",
    "build:node:macos-arm64": "napi build --platform --target aarch64-apple-darwin --release --package hwpjs --output-dir dist",
    "build:node:linux-x64": "napi build --platform --target x86_64-unknown-linux-gnu --release --package hwpjs --output-dir dist --use-cross",
    "build:react-native": "craby build && tsdown",
    "build:wasm": "napi build --target wasm32-wasip1-threads --release --package hwpjs --output-dir dist",
    "build:node": "bun run build:node:windows-x64 && bun run build:node:windows-x86 && bun run build:node:windows-arm64 && bun run build:node:macos-x64 && bun run build:node:macos-arm64 && bun run build:wasm",
    "build:node:all": "bun run build:node:windows-x64 || true && bun run build:node:windows-x86 || true && bun run build:node:windows-arm64 || true && bun run build:node:macos-x64 || true && bun run build:node:macos-arm64 || true && bun run build:wasm || true && bun run build:node:linux-x64",
    "build": "bun run build:node && bun run build:react-native",
    "prepare:artifacts": "napi create-npm-dirs",
    "postbuild:node:all": "bun run scripts/rename-wasm.ts && bun run scripts/cleanup-root.ts",
    "postprepublishOnly": "bun run scripts/cleanup-root.ts",
    "build:release": "bun run build:node:all && bun run postbuild:node:all && bun run prepare:artifacts && bun run artifacts && bun run prepublishOnly",
    "prepublishOnly": "napi prepublish -t npm --dry-run",
    "test": "bun test",
    "version": "napi version",
    "typecheck": "tsc --noEmit",
    "clean": "craby clean"
  },
  "devDependencies": {
    "@emnapi/core": "^1.5.0",
    "@emnapi/runtime": "^1.5.0",
    "@napi-rs/cli": "^3.2.0",
    "@oxc-node/core": "^0.0.34",
    "craby-modules": "^0.1.0-rc.2",
    "@react-native-community/cli-types": "^20.0.2",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.0",
    "chalk": "^5.6.2",
    "crabygen": "^0.1.0-rc.2",
    "npm-run-all2": "^8.0.4",
    "react": "19.1.1",
    "react-native": "0.82.1",
    "tinybench": "^5.0.1",
    "tsdown": "^0.16.8",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@ohah/hwpjs-win32-x64-msvc": "0.1.0-rc.1",
    "@ohah/hwpjs-darwin-x64": "0.1.0-rc.1",
    "@ohah/hwpjs-win32-ia32-msvc": "0.1.0-rc.1",
    "@ohah/hwpjs-darwin-arm64": "0.1.0-rc.1",
    "@ohah/hwpjs-win32-arm64-msvc": "0.1.0-rc.1",
    "@ohah/hwpjs-wasm32-wasi": "0.1.0-rc.1"
  },
  "dependencies": {
    "buffer": "^6.0.3"
  }
}
