{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "types": ["node"],
    "jsx": "react-native",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["."],
  "exclude": [
    "node_modules",
    "bench",
    "__test__",
    "**/dist/*",
    "**/node_modules/**"
  ]
}
